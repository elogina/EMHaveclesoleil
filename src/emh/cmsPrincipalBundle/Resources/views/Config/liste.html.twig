 <ul>
    {% for lien in liens %}
            {% if sites.id == lien.sites.id %}
            <li>
                <a href="{{path('cms_principal_page', {'slug':sites.slug)}}">
                           
                </a>
            </li>

        {%endif%}
    {%endfor %}
</ul>